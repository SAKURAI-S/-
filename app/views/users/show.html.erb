<!-- user詳細画面 -->

<main class="cleafix">
<div class="sidebar">

<h2>User info</h2>

<%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg',fallback:"no_image.jpg" %>

<p>name</p>

<%= @user.name %>

<p>introduction</p>

<%= @user.introduction %>

<%=link_to '', edit_user_path(@user.id),class: "glyphicon glyphicon-wrench" %>

<%= form_for (@book) do |f| %>
<h2>New book</h2>

    <%= f.text_field :title %>

<h4>Opinion</h4>

    <%= f.text_area :body %>

<%=f.submit 'Create Book' %>

<% end %>

<h2>Books</h2>

<table class="table table-striped">
	<thead>
		<tr>
			<th></th>
			<th>Title</th>
			<th>Body</th>
		</tr>
	</thead>


	<tbody>

			<tr>
			 <% @books.each do |book| %>
			    <td><%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg',fallback:"no_image.jpg" %></td>
				<td><%= link_to book.title, book_path(book.id) %></td>
				<td><%= book.body %><td>
			 <% end %>
			</tr>
	</tbody>





</table>