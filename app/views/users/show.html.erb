<!-- user詳細画面 -->


<div class="col-xs-3">
	<table class="table table-striped">
		<h2>User info</h2>
			<%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg',fallback:"no_image.jpg" %>
		<tr>
			<th>name</th>
			<td><%= @user.name %></td>
		</tr>
		<tr>
			<th>introduction</th>
			<td><%= @user.introduction %></td>
		</tr>
	</table>

	<%=link_to '', edit_user_path(@user.id),class: "glyphicon glyphicon-wrench" %>

	<h2>New book</h2>
		<%= form_for (@book) do |f| %>
			<h4>Title</h4>
	 		<%= f.text_field :title, class: "title_field" %>
			<h4>Opinion</h4>
			<%= f.text_area :body, class: "body_field" %>

			<%=f.submit 'Create Book',class: "btn btn-primary col-xs-12" %>
		<% end %>
</div>

<div class="col-xs-9">
	<h2>Books</h2>
	<table class="table table-striped">
		<thead>
			<tr>
				<th></th>
				<th>Title</th>
				<th>Body</th>
			</tr>
		</thead>

		<tbody>
				<% @books.each do |book| %>
				<tr>
				    <th><%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg',fallback:"no_image.jpg" %></th>
					<th><%= link_to book.title, book_path(book.id) %></th>
					<th><%= book.body %></th>
					<% end %>
				</tr>
		</tbody>
	</table>
</div>