<!-- Books画面 -->
<%= flash[:success] %>

<% if @book.errors.any? %>
    <div id="error_explanation">
      <h2><%= @book.errors.count %>件のerrorが発生しました。</h2>
      <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<h2>User info</h2>

<%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg',fallback:"no_image.jpg" %>

<p>name</p>

<%= @user.name %>

<p>introduction</p>

<%= @user.introduction %>

<%=link_to '', edit_user_path(current_user),class: "glyphicon glyphicon-wrench" %>

<h2>New book</h2>
<%= form_for (@book) do |f| %>
    <%= f.text_field :title %>

    <h4>Opinion</h4>
    <%= f.text_area :body %>

    <%=f.submit %>
     <% end %>

<table class="table table-striped">
<h2>Books</h2>
<% @books.each do |book| %>
  <p>Title</p>
  <%=link_to book.title ,book_path(book.id) %>
  <p>Opinion</p>
  <%= book.body %>
<% end %>
</table>

